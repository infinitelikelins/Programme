<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beiya_city_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        style="@style/backButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:src="@mipmap/btn_back" />

    <View
        android:id="@+id/view1"
        android:layout_width="155dp"
        android:layout_height="130dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="75dp"
        android:contentDescription="@null"
        android:cropToPadding="true"
        android:tag="park" />

    <View
        android:id="@+id/view2"
        android:layout_width="210dp"
        android:layout_height="150dp"
        android:layout_below="@id/view1"
        android:layout_alignBottom="@id/view1"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="60dp"
        android:contentDescription="@null"
        android:tag="park" />

    <View
        android:id="@+id/view3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="240dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@null"
        android:tag="home" />

    <View
        android:id="@+id/view4"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/view3"
        android:layout_alignTop="@id/view1"
        android:layout_toEndOf="@id/view1"
        android:contentDescription="@null"
        android:tag="zoo" />

    <View
        android:id="@+id/view5"
        android:layout_width="110dp"
        android:layout_height="140dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="85dp"
        android:layout_toEndOf="@id/view4"
        android:contentDescription="@null"
        android:tag="library" />

    <View
        android:id="@+id/view6"
        android:layout_width="155dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="160dp"
        android:contentDescription="@null"
        android:tag="school" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/patriotismEntryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view4"
        android:layout_alignEnd="@id/view4"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/btnBack"
        android:scaleType="center"
        android:tag="patriotism"
        android:visibility="gone"
        tools:srcCompat="@mipmap/patriotism_entry1"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stationEntryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:tag="world"
        tools:srcCompat="@mipmap/station_entry1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/theme_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        app:srcCompat="@drawable/more_themes" />

</RelativeLayout>